@model VidlyHw02.ViewModel.NewCustomerViewModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Save</h2>
@using (Html.BeginForm("Save","Customers"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.Name)
        @Html.TextBoxFor(m => m.Customer.Name, new {@class ="form-control"})
    </div>
    <div class="form-group">
        @*   <label for="Birthdate">Date of Birth</label>*@
        @Html.LabelFor(m =>m.Customer.Birthdate)
        @Html.TextBoxFor(m => m.Customer.Birthdate, "{0:d/MM/yyyy}",new {@class ="form-control"})
    </div>
    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(m =>m.Customer.IsSubscribedToNews)Subscribed to NewLetter? 
        </label>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.MembershipType)
        @Html.DropDownListFor(m => m.Customer.MembershipTypeId,new SelectList(Model.MembershipTypes,"Id","Name"),"Select MembershipType", new {@class ="form-control"})
    </div>
    @Html.HiddenFor(m =>m.Customer.Id)
    <button type="submit" class="btn btn-primary">Save</button>
}
