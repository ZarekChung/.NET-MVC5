@using VidlyHw02.Models

@model IEnumerable<VidlyHw02.Models.Movie>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
@{
    @Html.ActionLink("New Moviwe", "New", "Movies",null, new {@class="btn btn-primary btn-sm"});
    <p></p>
    <table id="movies" class="table table-bordered table-hover">
        <thead>
        <tr>
            <th>Movie</th>
            <th>Genre</th>
            <th></th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        
    @foreach (var movie in Model)
    {
        <tr>
            <td>@Html.ActionLink(movie.Name, "Details", "Movies", new {id = movie.Id}, null)</td>
            <td>@movie.Genre.Name</td>
            <td>@Html.ActionLink("Edit", "Edit", "Movies", new { id = movie.Id }, null)</td>
            <td>
                <input type="button" class="btn btn-primary btn-sm" value="Delete" onclick=" bootbox.confirm('Are you sure you want to delete this customer?',function(result) {if (result) {location.href = '@Url.Action("DeletMovie", "Movies", new { id = movie.Id })'}});" >
            </td>
        </tr>
    }
    
        </tbody>
    </table>
}