@using Microsoft.Ajax.Utilities
@model VidlyHw02.ViewModel.NewMovieViewModel

@{
	ViewBag.Title = "New";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>MovieForm</h2>
@using (Html.BeginForm("Save", "Movies"))
{
<div class="form-group">
	@Html.LabelFor(m => m.Movie.Name)
	@Html.TextBoxFor(m => m.Movie.Name, new { @class = "form-control" })
	@Html.ValidationMessageFor(m => m.Movie.Name)
</div>
	<div class="form-group">
		@Html.LabelFor(m => m.Movie.RealeaseDate)
		@Html.TextBoxFor(m => m.Movie.RealeaseDate, "{0:yyyy/MM/dd}", new { @class = "form-control" })
		@Html.ValidationMessageFor(m => m.Movie.RealeaseDate)

	</div>
	<div class="form-group">
		@Html.LabelFor(m => m.Movie.GenreId)
		@Html.DropDownListFor(m => m.Movie.GenreId, new SelectList(Model.Genres,"Id","Name"), "Select Genres", new {@class ="form-control"})     
		@Html.ValidationMessageFor(m => m.Movie.GenreId)
	</div>
	<div class="form-group">
		@Html.LabelFor(m => m.Movie.NumberInStock)
		@Html.TextBoxFor(m => m.Movie.NumberInStock, new { @class = "form-control" })
		@Html.ValidationMessageFor(m => m.Movie.NumberInStock)
   
	</div>
	 
	  @Html.AntiForgeryToken()

	<button type="submit" class="btn btn-primary">Save</button>
}
